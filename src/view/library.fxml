<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.LibraryController"
      alignment="center" spacing="10" 
      styleClass="root"
>
	<HBox spacing="15">
    	<ImageView>
		<image>
			<Image url="@UTS-logo.jpg"/>
		</image>
		</ImageView>
		<Label  styleClass="heading" text="Library"/>
		<Label  styleClass="heading" text="Management"/>
		<Label  styleClass="heading" text="System"/>
    </HBox>
	<Button text="Explore Catalogue" onAction="#handleOpenCatalogue"/>
	<Button text="View Patron Record"/>
	<Button text="View Favourite Books"/>
	<Button text="Enter Administration Mode"/>
	<Button text="Exit" onAction="#handleExit"/>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
